# Serdash Environment
# Copy to .env and fill in values

# Database
POSTGRES_PASSWORD=serdash_secret

# Rails
SECRET_KEY_BASE=generate_with_rails_secret
RAILS_ENV=development
RAILS_HOST=localhost

# OAuth (optional for magic link-only auth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Discovery (optional)
DISCOVERY_SUBNET=192.168.1.0/24
# For dashboard to call collector (default works in Docker)
COLLECTOR_URL=http://collector:3001

# SSL: Place cert.pem and key.pem in nginx/ssl/ for HTTPS
# Or use mkcert for local dev: mkcert -install && mkcert localhost
