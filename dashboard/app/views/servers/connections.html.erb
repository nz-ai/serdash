<div class="server-detail">
  <h1><%= @server.hostname || "Server ##{@server.id}" %> — Connections</h1>
  <p><%= link_to "← Back to server", server_path(@server) %></p>

  <div class="gallery-date">
    <span class="range-label">Date:</span>
    <%= form_with url: connections_server_path(@server), method: :get, local: true, class: "date-form" do |f| %>
      <%= f.date_field :date, value: @date, class: "date-input" %>
      <%= f.submit "Go", class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>

  <% if @connections.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Local</th>
          <th>Remote</th>
          <th>State</th>
          <th>Sampled at</th>
        </tr>
      </thead>
      <tbody>
        <% @connections.each do |s| %>
          <tr>
            <td><code><%= s.local_addr %></code></td>
            <td><code><%= s.remote_addr %></code></td>
            <td><span class="badge badge-active"><%= s.state %></span></td>
            <td><%= s.sampled_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No connections recorded for <%= @date.strftime("%Y-%m-%d") %>.</p>
  <% end %>
</div>
